import std;
import result as stdResult;
import "result.hob" as result;

use result.Result;

public type Pid = i32;

type WaitOptions = i32;
extern(waitpid) fun Pid.internalWait(self, status: *i32, options: WaitOptions) -> i32;

public fun Pid.wait(self) -> result.Result.<i32> {
    var status: i32 = 0;
    final res = result.new(self.internalWait(&status, 0 as WaitOptions));
    return res;
}
